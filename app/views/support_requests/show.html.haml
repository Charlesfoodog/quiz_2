%h1= @support_request.title
%p= @support_request.description
%p
  Vote Count: #{@support_request.vote_count}
  %br
  - if session[:has_voted]
    You voted already2!
  - else
    = button_to "Vote Up", vote_up_support_request_path(@support_request)
  %br
  = link_to "Edit", edit_support_request_path(@support_request)
  = button_to "Delete", @support_request, method: :delete, data: {confirm: "Are you sure you want to delete this idea?"}
  %br
  = link_to "All Questions", support_request_path

%h2 Add An Answer
- if @comment.errors.any?
  %ul
    - @comment.errors.full_messages.each do |message|
      %li= message
/= form_for [@support, comments] do |f|
= form_for @comment, url: support_request_comments_path(@support_request) do |f|
  = f.text_area :body
  %br
  = f.submit "Submit an comment", class: "btn btn-primary"

%hr
- @comment.each do |answer|
  .well
    %p= answer.body
